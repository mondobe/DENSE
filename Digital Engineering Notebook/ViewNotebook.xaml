<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Digital_Engineering_Notebook.ViewNotebook">
    <StackLayout>
        <Frame BackgroundColor="White" Padding="24" CornerRadius="0">
            <Label x:Name="topLabel" Text="Notebook Name" HorizontalTextAlignment="Start" TextColor="Black" FontSize="Medium"/>
        </Frame>
        <ScrollView>
            <StackLayout x:Name="layout">
                <Button Text="Export" Clicked="Export" HorizontalOptions="End" BorderWidth="3"/>
                <Button Text="Add Entry" FontSize="Medium" Clicked="AddEntry"/>
                <Button Text="Add Contact" FontSize="Medium" Clicked="AddContact"/>
                <Button Text="Add Reference" FontSize="Medium" Clicked="AddReference"/>
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>