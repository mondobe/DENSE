<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Digital_Engineering_Notebook.EditItem">
    <ScrollView>
        <StackLayout>
            <StackLayout x:Name="layout">
                <Button Clicked="StopWorking" Text="Stop Working" VerticalOptions="Start" HorizontalOptions="Start"/>
            </StackLayout>
            <Entry x:Name="textEntry" VerticalOptions="EndAndExpand" Completed="Entry_Completed"/>
        </StackLayout>
    </ScrollView>
</ContentPage>